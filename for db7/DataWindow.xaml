<Window x:Class="for_db7.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:for_db7"
        mc:Ignorable="d"
        Title="DataWindow" Height="720" Width="1080" ResizeMode="CanResize" WindowState="Maximized" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="CustomerPageButton" Content="Customers" Click="CustomerPageButton_Click"></Button>
            <Button x:Name="BonusCardPageButton" Content="Bonus Cards" Click="BonusCardPageButton_Click"></Button>
        </StackPanel>
        <Frame x:Name="ActiveFrame" Grid.Column="1" Content="Open smth"/>
    </Grid>
</Window>
